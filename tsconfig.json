{
  "compilerOptions": {
    "baseUrl"                         : "src",
    "lib"                             : ["ESNext"],
    "target"                          : "ES2020",
    "module"                          : "CommonJS",
    "moduleResolution"                : "Node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports"    : true,
    "esModuleInterop"                 : true,
    "noUncheckedIndexedAccess"        : true,
    "strictNullChecks"                : true,
    "removeComments"                  : true,
    "resolveJsonModule"               : true,
    "skipLibCheck"                    : true,
  }
}
